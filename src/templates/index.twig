                ] %}

                {% for how_we_work in how_we_works %}
                    {% include '_blocks/_how-we-works__item.twig' with {item: how_we_work, index: loop.index} %}
                {% endfor %}

            </div>
        </div>
    </section>

    <section class="travel travel_margin-bottom">
        <div class="container">
            <div class="title title_margin-bottom">TRAVEL WITH US</div>

            <div class="travel__wrap">

                {% set travels = [
