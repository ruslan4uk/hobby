                {% set how_we_works = [
                    {icon: 'paper', title: 'Lorem ipsum dolor sit', description: 'amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt'},
                    {icon: 'user', title: 'Lorem ipsum dolor sit', description: 'amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt'},
